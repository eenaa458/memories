<div class="container">
  <% if users.any? %>
    <ul class="list-unstyled">
      <% users.each do |user| %>
        <li class="media text-center">
          <div class="media-body">
            <img class="mr-2 rounded align-self-center" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
            <div><%= user.name %></div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </li>
      <% end %>
    </ul>
    <%= paginate users %>
  <% end %>
</div>